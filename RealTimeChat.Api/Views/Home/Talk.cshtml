@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <style type="text/css">
        body {
            background-color: #f0f0f0;
        }
    </style>
}

<div id="talk">
    <div class="sidenav">
        <div class="container">
            <img class="talk-image-chat" src="~/images/chat.png" />
            <a id="logOut" href="#">Log Out</a>
        </div>
        <div id="users" class="talk-user-list">
        </div>
    </div>
    <div class="main">
        <div id="messages" class="talk-message-list">
        </div>
        <div id="form" class="talk-message-button display-none">
            <input id="groupName" type="hidden" />
            <input id="textMessage" class="talk-message-text" type="text" placeholder="Message" autofocus />
            <button id="send" class="talk-message-send"></button>
        </div>
    </div>
</div>
